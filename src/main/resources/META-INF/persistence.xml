<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="cloudhr_server" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <!-- <jta-data-source>jdbc/DefaultDB</jta-data-source> -->
        <class>persistence.User</class>                     
        <class>persistence.User_Score</class>       
        <class>persistence.User_Score_Key</class>
        <class>persistence.SRule_Key</class>        
        <class>persistence.UserSR</class> 
        <class>persistence.Wechat_AccToken</class>
        <class>persistence.Customer_Datasource</class>         
                    
        <properties>
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables" />
            <property name="eclipselink.logging.level" value="SEVERE"/> 
            <property name="eclipselink.query-results-cache" value="false"/>
        </properties> 
        <!-- local test -->

   
    </persistence-unit>
</persistence>
